<%= form_for product.product_exercises.find_by_exercise_id(exercise), :url => { controller: :exercise_products, action: :destroy }, :html => { :method => :delete, :class => "form-inline", :style => "display:inline"} do |f| %>
	<%= f.hidden_field :exercise_id %>
	<%= f.hidden_field :product_id %>
	<%= f.submit product.name, class: "btn btn-danger" %>
<% end %>
