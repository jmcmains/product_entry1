<script>
$(function() {
	$("#main").scrollLeft(256*3)
});
$("#img").click(function () {
	$(this).html("<iframe width='990' height='400' src='http://www.youtube.com/embed/IubbfixvqQM?rel=0&amp;autoplay=1' frameborder='0' allowfullscreen></iframe>")
});
$("#forward").click(function () {
	if($("#main").scrollLeft() < 256*2) {
		$("#main").scrollLeft($('#main')[0].scrollWidth-$('#main').innerWidth()-256*2)
	}
	else if($("#main").scrollLeft() > $('#main')[0].scrollWidth-$('#main').innerWidth()-256*2) {
		$("#main").scrollLeft(256*2)
	}
	$("#main").animate({scrollLeft: $("#main").scrollLeft()+256}, "slow")
	
});
$("#back").click(function () {
	if($("#main").scrollLeft() < 256*2) {
		$("#main").scrollLeft($('#main')[0].scrollWidth-$('#main').innerWidth()-256*2)
	}
	else if($("#main").scrollLeft() > $('#main')[0].scrollWidth-$('#main').innerWidth()-256*2) {
		$("#main").scrollLeft(256*2)
	}
  $("#main").animate({scrollLeft: $("#main").scrollLeft()-256}, "slow")
});
</script>

